# Listen {{ ap_http_port }

<VirtualHost *:{{ap_http_port}}>

        ServerName customerinformation.ipko.com
        ServerAlias www.customerinformation.ipko.com
        DocumentRoot "/var/www/{{ap_http_host_dir}}"
        ErrorLog ${APACHE_LOG_DIR}/error.log
        CustomLog ${APACHE_LOG_DIR}/access.log combined
        ServerSignature Off
        SSLProxyEngine on

## REDIRECT HTTPS #

RewriteEngine on
RewriteCond %{HTTPS} !=on
RewriteRule .* https://%{SERVER_NAME}%{REQUEST_URI} [NE,R,L]

## END REDIRECT HTTPS ##

</VirtualHost>
